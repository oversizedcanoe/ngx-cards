{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/ngx-cards",
  "lib": {
    "entryFile": "src/public-api.ts"
  },
  "assets": [
    {
      "glob": "**/*",
      "input": "./src/assets/cards",
      "output": "/assets/cards"
    },
    {
      "glob": "**/*",
      "input": "./src/assets/dice",
      "output": "./assets/dice"
    }
  ]
}